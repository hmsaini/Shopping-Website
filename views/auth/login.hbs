<div class="container" style="margin-top:40px;">
    <div class="row" style="display:block;margin:auto;">
        <div class="col-md-8">
            <h1 style="text-align:center;">Login Here</h1>
            <form action="/login" method="post" style="margin-bottom: 20px;">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" class="form-control" id="email" value="{{oldInput.email}}">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" class="form-control" id="password"
                        value="{{oldInput.password}}">
                </div>
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <input type="submit" value="Login" class="btn btn-primary btn-block">
            </form>
            <div class="text-center">
                <a href="/reset">Reset Password</a>
            </div>

            {{#if errorMessage}}
            <div class="user-message user-message--error">{{errorMessage}}</div>
            {{/if}}
        </div>
    </div>
</div>