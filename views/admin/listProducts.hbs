<div class="container" style="margin-top: 40px;">
    <div class="row">
        {{#if products}}
        {{#each products}}
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h1>{{this.title}}</h1>
                </div>
                <div class="card-body">
                    <img src="/{{this.imageUrl}}" class="img" alt="">
                    <h2>Price: ${{this.price}}</h2>
                    <p>{{this.description}}</p>

                    <a href="/admin/edit-product/{{this._id}}" class="btn btn-success btn-block">Edit</a>
                    <br>
                    <form action="/admin/delete-product/{{this._id}}" method="post">
                        <input type="hidden" name="_csrf" value="{{../csrfToken}}">
                        <input type="submit" name="submit" value="Delete" class="btn btn-danger btn-block">
                        <input type="hidden" name="id" value="{{this._id}}">
                    </form>

                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <h1>No product Available</h1>
        {{/if}}
    </div>
</div>
