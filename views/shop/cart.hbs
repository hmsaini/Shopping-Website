<div class="container" style="margin-top: 40px;">
    <div class="row">
        <div class="col-md-12">
            {{#if products}}
            <div class="table-responsive ">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">remove</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each products}}
                        <tr>
                            <td scope="row">{{this.productId.title}}</td>
                            <td><b>{{this.quantity}}</b></td>
                            <td>
                                <form action="/cart-delete-item" method="post">
                                    <input type="hidden" name="_csrf" value="{{../csrfToken}}">
                                    <input type="hidden" value="{{this.productId._id}}" name="productId">
                                    <input type="submit" class="btn btn-sm btn-danger" name="submit" value="Delete">
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                        <a href="/checkout" class="btn btn-block btn-dark">Order Now!</a>
                        <hr>
                        {{!-- <form action="/create-order" method="post">
                            <input type="hidden" name="_csrf" value="{{csrfToken}}">
                            <button type="submit" class="btn btn-block btn-dark">Order Now!</button>
                        </form> --}}
                    </tbody>
                </table>
            </div>
            {{else}}
            <h3>No Product in the cart.</h3>
            {{/if}}
        </div>
    </div>